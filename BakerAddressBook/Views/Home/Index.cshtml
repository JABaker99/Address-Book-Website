@model System.Collections.Generic.List<BakerAddressBook.Models.Contact>
@{
    ViewData["Title"] = "All Contacts";
}

<h2>All Contacts</h2>

<table class="table">
    <thead>
    <tr>
        <th>Contact Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Nickname</th>
        <th>Phone Number</th>
        <th>Category</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.ContactId</td>
                <td>
                    <a asp-controller="Contacts" asp-action="Details" asp-route-id="@contact.ContactId">
                        @contact.FirstName
                    </a>
                </td>
                <td>
                    <a asp-controller="Contacts" asp-action="Details" asp-route-id="@contact.ContactId">
                        @contact.LastName
                    </a>
                </td>
                <td>
                    <a asp-controller="Contacts" asp-action="Details" asp-route-id="@contact.ContactId">
                        @contact.Nickname
                    </a>
                </td>
                <td>@contact.PhoneNumber</td>
                <td>@contact.Category.Name</td>
            </tr>
        }
        <tr>
            <td colspan="6" class="text-center">
                <a asp-controller="Contacts" asp-action="Create" class="btn btn-success">
                    + Add New Contact
                </a>
            </td>
        </tr>
    </tbody>
</table>