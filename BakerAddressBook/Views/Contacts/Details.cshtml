@model BakerAddressBook.Models.Contact
@{
    ViewData["Title"] = "Contact Details";
}

<h2>Contact Details</h2>

<dl>
    <dt>First Name</dt><dd>@Model.FirstName</dd>
    <dt>Last Name</dt><dd>@Model.LastName</dd>
    <dt>Nickname</dt><dd>@Model.Nickname</dd>
    <dt>Phone Number</dt><dd>@Model.PhoneNumber</dd>
    <dt>Category</dt><dd>@Model.Category?.Name</dd>
    <dt>Date Created</dt><dd>@Model.DateCreated.ToString("yyyy-MM-dd HH:mm")</dd>
</dl>
 